<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef>
		<defName>EVM_PreyContainer</defName>
		<label>Digesting</label>
		<description>Object in the digestion track</description>
		<hediffClass>EVM.PreyContainer</hediffClass>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
                <statOffsets>
                  <Mass>0</Mass>
                </statOffsets>
                <statFactors>
                  <MoveSpeed>1</MoveSpeed>
                </statFactors>
			</li>
		</stages>
	</HediffDef>
    
    <!-- For those stubborn pawns who are simply immune to acid -->
	<HediffDef>
		<defName>EVM_Digested</defName>
		<label>Digested</label>
		<description>Is or was in the proccess of being digested by another live being</description>
        <defaultLabelColor>(0.5,0.5,0)</defaultLabelColor>
		<scenarioCanAdd>false</scenarioCanAdd>
    <hediffClass>HediffWithComps</hediffClass>
    <!--<lethalSeverity>1</lethalSeverity> Actual digestion is real killer-->
    <makesSickThought>true</makesSickThought>
    <initialSeverity>0.2</initialSeverity>
    <maxSeverity>1</maxSeverity>
    <stages>
      <li>
        <label>covered</label>
        <capMods>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.2</minSeverity>
        <label>yucky</label>
        <painOffset>0.1</painOffset>
        <capMods>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.6</minSeverity>
        <label>consumed</label>
        <painOffset>0.2</painOffset>
        <capMods>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.5</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="EVM.HediffCompProperties_SeverityWhileInside"> 
        <severityPerDay>2</severityPerDay>
        <severityWhileOut>-5</severityWhileOut>
      </li>
    </comps>
	</HediffDef>
    
    
  <RecipeDef ParentName="SurgeryFlesh">
    <defName>EVM_RescuePrey</defName>
    <label>rescue contents</label>
    <description>Forcefully eject contents from inside without killing the pawn.</description>
    <workerClass>EVM.Recipe_RescuePrey</workerClass>
    <jobString>Rescuing from stomach.</jobString>
    <workAmount>2000</workAmount>
    <surgerySuccessChanceFactor>1.2</surgerySuccessChanceFactor>
    <developmentalStageFilter>Child, Adult</developmentalStageFilter>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
    </fixedIngredientFilter>
  </RecipeDef>
    
    
</Defs>